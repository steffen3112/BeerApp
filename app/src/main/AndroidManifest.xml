<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.steffen.ozapft">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/beer_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/beer_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <item
            android:id="@+id/menu_item_share"
            android:showAsAction="ifRoom"
            android:title="Share"
            android:actionProviderClass=
                "android.widget.ShareActionProvider" />

        <activity android:name=".LoginRegistration.LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginRegistration.Register" />
        <activity
            android:name=".LoginRegistration.UserArea.UserArea"
            android:label="@string/title_activity_user_area"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginRegistration.PINLogin" />
        <activity android:name=".LoginRegistration.UserArea.BeerRanking" />
        <activity android:name=".LoginRegistration.UserArea.MyConsumption"></activity>
    </application>

</manifest>